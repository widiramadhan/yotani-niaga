    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/pop_up_baground</item>
        <item name="android:layout_width">100dp</item>
    </style>

    <style name="TextLabelHint" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">10dp</item>
    </style>

    <style name="ProgressBarPrimary" parent="android:Widget.ProgressBar.Horizontal">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_drawable</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>

    <style name="MyToolbarFancyTheme">
        <item name="android:homeAsUpIndicator">@color/white</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <style name="LblInput">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/lblInput</item>
    </style>

    <style name="LblValue">
        <item name="android:fontFamily">@font/candara_bold_italic</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="LblInput.Bold">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
    </style>

    <style name="ErrorTextInput" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/colorTextInputError</item>
        <item name="android:textSize">11dp</item>
<!--        <item name="android:layout_marginLeft">10dp</item>-->
    </style>

    <style name="TitleFaq">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/font_title_faq</item>
        <item name="android:layout_marginTop">@dimen/margin_top_title_faq</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_title_faq</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
    </style>

    <style name="Chip" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
