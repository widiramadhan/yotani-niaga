<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >

            <LinearLayout
                android:id="@+id/lytSorting"
                android:layout_width="@dimen/_85sdp"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:foreground="?android:selectableItemBackground"
                android:padding="@dimen/_6sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSorting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:src="@drawable/ic_sorting_orange" />

                <TextView
                    android:id="@+id/lblSorting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:text="@string/sorting"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>
            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:src="@drawable/divider_line_item"
                />

            <LinearLayout
                android:id="@+id/lytFilter"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:foreground="?android:selectableItemBackground"
                android:padding="@dimen/_6sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:src="@drawable/jam_filter_f" />

                <TextView
                    android:id="@+id/lblFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/filter"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp" />
            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>