<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="25dp">

        <LinearLayout
            android:id="@+id/lytSorting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/shape_three"
            android:foreground="?attr/selectableItemBackground"
            android:padding="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/contSorting"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginHorizontal="@dimen/_56sdp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imgSorting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_2sdp"
                    android:tint="@color/colorAccent"
                    android:src="@drawable/ic_sorting_orange" />

                <TextView
                    android:id="@+id/lblSorting"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sorting"
                    android:textColor="@color/colorAccent"
                    android:fontFamily="@font/candara"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>