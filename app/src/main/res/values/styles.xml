    </style>

    <style name="TitleHeaderJobOffer" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/lblInput</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="LabelJobOffer" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorLblJobOffer</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="LabelJobOfferNextPosition" parent="LabelJobOffer">
        <item name="android:layout_marginTop">15dp</item>
    </style>

    <style name="LabelValueJobOffer" parent="Widget.AppCompat.TextView">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
