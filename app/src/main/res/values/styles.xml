        <item name="android:textSize">@dimen/font_button2</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="ButtonYoTaniWithMargin" parent="ButtonYoTani">
        <item name="android:layout_marginLeft">@dimen/marginWidgetToParent</item>
        <item name="android:layout_marginRight">@dimen/marginWidgetToParent</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>


    <style name="ButtonConfirmationNegative">
        <item name="android:textAllCaps">false</item>
