<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:id="@+id/frameLayout"
            android:layout_width="@dimen/_61sdp"
            android:layout_height="@dimen/_69sdp"
            android:background="@color/colorBackgroundCalendar"
            android:layout_marginVertical="@dimen/_21sdp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgSupplyDemands"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_44sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_pks"
                android:tint="#D8D8D8" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="17dp"
            android:layout_marginEnd="@dimen/_10sdp"
            app:layout_constraintBottom_toBottomOf="@+id/frameLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/frameLayout"
            app:layout_constraintTop_toTopOf="@+id/frameLayout">

            <TextView
                android:id="@+id/lblDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="03 Agustus 2020 09:30"
                android:textColor="@color/colorSubtitle"
                android:textSize="@dimen/_12sdp"
                />

            <TextView
                android:id="@+id/lblInvoiceNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="INV/20200804/XX/VIII/5671237791"
                android:textColor="@color/color_title_home"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/lblName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Sarwanto"
                android:textColor="@color/color_title_home"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/lblSupply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="1000 Ton"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>