<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:andorid="http://schemas.android.com/apk/res-auto">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:elevation="@dimen/_1sdp"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <TextView
                        android:id="@+id/lblNamaPks"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        tools:text="PT. Padang Palma"
                        android:textStyle="bold"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/colorPrimary"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end"
                        >

                        <FrameLayout
                            android:id="@+id/lytEditPks"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/shape_round_pink"
                            android:foreground="?attr/selectableItemBackground"
                            >

                            <ImageView
                                android:layout_width="@dimen/_13sdp"
                                android:layout_height="@dimen/_13sdp"
                                android:src="@drawable/ic_pencil_orange"
                                android:layout_margin="@dimen/_10sdp"
                                />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_15sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/palm_in_one_crop"
                            android:textColor="@color/color_title_home"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            />

                        <TextView
                            android:id="@+id/lblTotalPalmInOneCrop"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1 Ton"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="@dimen/_11sdp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/total_tree"
                            android:textColor="@color/color_title_home"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            />

                        <TextView
                            android:id="@+id/lblTotalTree"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1000"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="@dimen/_11sdp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/years_of_plant"
                            android:textColor="@color/color_title_home"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            />

                        <TextView
                            android:id="@+id/lblYearsOfPlant"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="2002"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="@dimen/_11sdp"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_15sdp"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/garden_area"
                            android:textColor="@color/color_title_home"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            />

                        <TextView
                            android:id="@+id/lblGardenArea"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="1000 Hektar"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="@dimen/_11sdp"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/srLocation"
                            android:textColor="@color/color_title_home"
                            android:textStyle="bold"
                            android:textSize="@dimen/_13sdp"
                            android:layout_marginTop="@dimen/_14sdp"
                            />

                        <TextView
                            android:id="@+id/lblLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            tools:text="Bukit Meuriam, Peureulak Tim., Kabupaten Aceh Timur, Aceh 24452"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:textColor="@color/colorSubtitle"
                            android:textSize="@dimen/_11sdp"
                            />

                    </LinearLayout>

                </LinearLayout>

                <ImageView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:id="@+id/map"
                    android:name="com.google.android.gms.maps.SupportMapFragment"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:src="@color/colorLoading"
                    tools:context=".MapsActivity" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</layout>