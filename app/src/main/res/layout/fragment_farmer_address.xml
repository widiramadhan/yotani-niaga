<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/light_gray3"
        android:orientation="vertical"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_8sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/farmer_address"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/coordinate_mandatory"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp">

                        <fragment
                            android:id="@+id/map"
                            android:name="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            tools:context=".view.editprofilepetani.EditProfilePetaniActivity.EditProfilePetaniActivity" />

                        <ImageView
                            android:id="@+id/mapMarker"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:src="@drawable/ic_marker_maps" />

                        <com.javaindoku.yotaniniaga.utilities.DelayAutoCompleteTextView
                            android:id="@+id/edtxMapSearch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="8dp"
                            android:layout_marginRight="8dp"
                            android:background="@drawable/shape_text_input"
                            android:focusable="true"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:inputType="textEmailSubject"
                            android:maxLines="1"
                            android:paddingLeft="30dp"
                            android:selectAllOnFocus="true"
                            android:textColor="#4d4d4d"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@id/edtxMapSearch"
                            android:layout_alignTop="@id/edtxMapSearch"
                            android:layout_alignBottom="@id/edtxMapSearch"
                            android:layout_marginLeft="8dp"
                            android:src="@drawable/ic_search_black_24dp" />

                    </RelativeLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/profileAlamat"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtKTPAlamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_text_input"
                        android:digits="@string/srValidationAlphanumeric"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:gravity="top|left"
                        android:hint="@string/description"
                        android:inputType="textMultiLine"
                        android:lines="4"
                        android:maxLength="200"
                        android:textColor="#4d4d4d" />

                    <TextView
                        android:id="@+id/lblErrorKtpAlamat"
                        style="@style/ErrorTextInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/field_is_required"
                        android:textColor="@color/colorTextInputError"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="@string/profileRT"
                                android:textColor="@color/color_title_home"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edtKTPRT"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/shape_text_input"
                                android:digits="0123456789"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:inputType="numberSigned"
                                android:maxLength="3"
                                android:textColor="#4d4d4d" />

                            <TextView
                                android:id="@+id/lblErrorKtpRt"
                                style="@style/ErrorTextInput"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/field_is_required"
                                android:textColor="@color/colorTextInputError"
                                android:visibility="gone" />
                        </LinearLayout>

                        <androidx.legacy.widget.Space
                            android:layout_width="@dimen/_8sdp"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:text="@string/profileRW"
                                android:textColor="@color/color_title_home"
                                android:textSize="@dimen/_12sdp"
                                android:textStyle="bold" />

                            <EditText
                                android:id="@+id/edtKTPRW"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_2sdp"
                                android:background="@drawable/shape_text_input"
                                android:digits="0123456789"
                                android:focusable="true"
                                android:focusableInTouchMode="true"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:inputType="numberSigned"
                                android:maxLength="3"
                                android:textColor="#4d4d4d" />

                            <TextView
                                android:id="@+id/lblErrorKtpRw"
                                style="@style/ErrorTextInput"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/field_is_required"
                                android:textColor="@color/colorTextInputError"
                                android:visibility="gone" />
                        </LinearLayout>
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/profileProvinsi"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <!-- Spinner Provinsi Text -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_text_input"
                        android:gravity="center_vertical"
                        android:padding="0dp">

                        <EditText
                            android:id="@+id/textAnchor"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerProvinsi"
                            style="@style/SpinnerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignTop="@id/textAnchor"
                            android:layout_alignBottom="@id/textAnchor"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/colorChevron" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lblErrorKtpProvinsi"
                        style="@style/ErrorTextInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/field_is_required"
                        android:textColor="@color/colorTextInputError"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/profileKabupaten"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <!-- Spinner Kabupaten Text -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_text_input"
                        android:gravity="center_vertical"
                        android:padding="0dp">

                        <EditText
                            android:id="@+id/textAnchor2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerKabupaten"
                            style="@style/SpinnerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignTop="@id/textAnchor2"
                            android:layout_alignBottom="@id/textAnchor2"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/colorChevron" />

                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lblErrorKtpKabupaten"
                        style="@style/ErrorTextInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/field_is_required"
                        android:textColor="@color/colorTextInputError"
                        android:visibility="gone" />

                    <!-- Spinner Kecamatan Text -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/profileKecamatan"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_text_input"
                        android:gravity="center_vertical"
                        android:padding="0dp">

                        <EditText
                            android:id="@+id/textAnchor3"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerKecamatan"
                            style="@style/SpinnerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignTop="@id/textAnchor3"
                            android:layout_alignBottom="@id/textAnchor3"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/colorChevron" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lblErrorKtpKecamatan"
                        style="@style/ErrorTextInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/field_is_required"
                        android:textColor="@color/colorTextInputError"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/profileKelurahan"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <!-- Spinner Kelurahan Text -->

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_text_input"
                        android:gravity="center_vertical"
                        android:padding="0dp">

                        <EditText
                            android:id="@+id/textAnchor4"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />

                        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                            android:id="@+id/spinnerKelurahan"
                            style="@style/SpinnerTheme"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_alignTop="@id/textAnchor4"
                            android:layout_alignBottom="@id/textAnchor4"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:textColor="@color/colorChevron" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/lblErrorKtpKelurahan"
                        style="@style/ErrorTextInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/field_is_required"
                        android:textColor="@color/colorTextInputError"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_12sdp"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:text="@string/profileKodePos"
                        android:textColor="@color/color_title_home"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        android:id="@+id/edtKTPKodePos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_2sdp"
                        android:background="@drawable/shape_text_input"
                        android:editable="false"
                        android:fontFamily="@font/nunito_sans_regular"
                        android:longClickable="false"
                        android:textColor="#4d4d4d" />

                    <TextView
                        android:id="@+id/lblErrorKtpKodePos"
                        style="@style/ErrorTextInput"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/field_is_required"
                        android:textColor="@color/colorTextInputError"
                        android:visibility="gone" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_8sdp"
                android:layout_marginTop="@dimen/_16sdp"
                app:cardCornerRadius="@dimen/_6sdp"
                app:cardElevation="@dimen/_2sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/_16sdp"
                    android:layout_marginVertical="@dimen/_16sdp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="@string/farmer_domicile"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_13sdp"
                            android:textStyle="bold" />

                        <CheckBox
                            android:id="@+id/cekSesuaiKTP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="@string/sesuai_ktp"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lytDomisili"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="@string/coordinate_mandatory"
                            android:textColor="@color/color_title_home"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp">

                            <fragment
                                android:id="@+id/map2"
                                android:name="com.google.android.gms.maps.SupportMapFragment"
                                android:layout_width="match_parent"
                                android:layout_height="200dp"
                                tools:context=".view.editprofilepetani.EditProfilePetaniActivity.EditProfilePetaniActivity" />

                            <ImageView
                                android:id="@+id/mapMarker2"
                                android:layout_width="wrap_content"
                                android:layout_height="40dp"
                                android:layout_centerInParent="true"
                                android:src="@drawable/ic_marker_maps" />

                            <com.javaindoku.yotaniniaga.utilities.DelayAutoCompleteTextView
                                android:id="@+id/edtxMapSearch2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="8dp"
                                android:layout_marginRight="8dp"
                                android:background="@drawable/shape_text_input"
                                android:focusable="true"
                                android:fontFamily="@font/nunito_sans_regular"
                                android:inputType="textEmailSubject"
                                android:maxLines="1"
                                android:paddingLeft="30dp"
                                android:selectAllOnFocus="true"
                                android:textColor="#4d4d4d"
                                android:textSize="@dimen/_14sdp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@id/edtxMapSearch2"
                                android:layout_alignTop="@id/edtxMapSearch2"
                                android:layout_alignBottom="@id/edtxMapSearch2"
                                android:layout_marginLeft="8dp"
                                android:src="@drawable/ic_search_black_24dp" />

                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="@string/profileAlamat"
                            android:textColor="@color/color_title_home"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <EditText
                            android:id="@+id/edtDomisiliAlamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/shape_text_input"
                            android:digits="@string/srValidationAlphanumeric"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:gravity="top|left"
                            android:hint="@string/description"
                            android:inputType="textMultiLine"
                            android:lines="4"
                            android:maxLength="200"
                            android:textColor="#4d4d4d" />

                        <TextView
                            android:id="@+id/lblErrorDomisiliAlamat"
                            style="@style/ErrorTextInput"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/field_is_required"
                            android:textColor="@color/colorTextInputError"
                            android:visibility="gone" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:text="@string/profileRT"
                                    android:textColor="@color/color_title_home"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edtDomisiliRT"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:background="@drawable/shape_text_input"
                                    android:digits="0123456789"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:inputType="numberSigned"
                                    android:maxLength="3"
                                    android:textColor="#4d4d4d" />

                                <TextView
                                    android:id="@+id/lblErrorDomisiRt"
                                    style="@style/ErrorTextInput"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/field_is_required"
                                    android:textColor="@color/colorTextInputError"
                                    android:visibility="gone" />
                            </LinearLayout>

                            <androidx.legacy.widget.Space
                                android:layout_width="@dimen/_8sdp"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:text="@string/profileRW"
                                    android:textColor="@color/color_title_home"
                                    android:textSize="@dimen/_12sdp"
                                    android:textStyle="bold" />

                                <EditText
                                    android:id="@+id/edtDomisiliRW"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/_2sdp"
                                    android:background="@drawable/shape_text_input"
                                    android:digits="0123456789"
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:fontFamily="@font/nunito_sans_regular"
                                    android:inputType="numberSigned"
                                    android:maxLength="3"
                                    android:textColor="#4d4d4d" />

                                <TextView
                                    android:id="@+id/lblErrorDomisiliRw"
                                    style="@style/ErrorTextInput"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/field_is_required"
                                    android:textColor="@color/colorTextInputError"
                                    android:visibility="gone" />
                            </LinearLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_12sdp"
                            android:fontFamily="@font/nunito_sans_regular"
                            android:text="@string/profileProvinsi"
                            android:textColor="@color/color_title_home"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold" />

                        <!-- Spinner Provinsi Text -->
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_2sdp"
                            android:background="@drawable/shape_text_input"
                            android:gravity="center_vertical"
                            android:padding="0dp">

                            <EditText
                                android:id="@+id/textAnchorProvinsiDomisili"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/spinnerProvinsiDomisili"
                                style="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
