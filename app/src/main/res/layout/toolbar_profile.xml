<?xml version="1.0" encoding="utf-8"?>
<layout>
    <androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/toolbarProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBackToolbarProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tint="@color/md_white_1000"
                android:visibility="gone"
                app:srcCompat="@drawable/ic_icon_back" />

            <TextView
                android:id="@+id/lblTitleToolbarProfile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_regular"
                android:textStyle="bold"
                android:text="@string/profile"
                android:textColor="@color/md_white_1000"
                android:textSize="@dimen/_20sdp" />

            <LinearLayout
                android:id="@+id/lytIconsActionProfile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="right|center_vertical"
                android:orientation="horizontal"
                >

                <ImageView
                    android:id="@+id/imgSearchToolbarProfile"
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_33sdp"
                    android:layout_weight="0"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:foreground="?attr/selectableItemBackground"
                    style="?android:borderlessButtonStyle"
                    app:srcCompat="@drawable/search_anticon_2" />

            </LinearLayout>

        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
</layout>