<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textSize">14dp</item>
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="buttonStyle">?android:attr/borderlessButtonStyle</item>
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="AppThemeChihp" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:actionModeBackground">@color/colorPrimary</item>
    </style>

    <style name="chipTextCheckAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/nunito_sans_semi_bold</item>
        <item name="android:textColor">@color/bg_chip_text_color</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="chipTextUncheckAppearance" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:fontFamily">@font/nunito_sans_regular</item>
        <item name="android:textColor">@color/bg_chip_text_color</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="OtpWidget" />

    <style name="OtpWidget.OtpView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="Edittext.Yotani" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_shape_edittext</item>
        <item name="android:padding">10dp</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">14dp</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="textLabel" parent="Widget.Design.TextInputLayout">
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="Widget.AppCompat.Button.myColllored" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/shape_two</item>
    </style>

    <style name="OtpActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="otpViewStyle">@style/OtpWidget.OtpView</item>
    </style>

    <style name="ActionBar.SemiTransp" parent="Base.Widget.AppCompat.ActionBar">
        <item name="displayOptions">showHome</item>
        <item name="background">@color/md_white_1000</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="AppTheme.SemiTranspActionBar" parent="@style/AppTheme">
        <item name="actionBarStyle">@style/ActionBar.SemiTransp</item>
        <item name="android:src">@drawable/fill_1</item>
    </style>
    <!--        <item nameId="windowActionBarOverlay">true</item>-->
    <style name="ButtonYoTani">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_two</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">@font/candara_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="ButtonYoTaniDisable">
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/shape_disabled</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:fontFamily">@font/candara_bold</item>
        <item name="android:textSize">@dimen/font_button2</item>
